// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "languages": {
    "Elixir": {
      "language_servers": ["expert", "!elixir-ls", "!next-ls", "!lexical"],
    },
    "HEEX": {
      "language_servers": ["expert", "!elixir-ls", "!next-ls", "!lexical"],
    },
  },
  "git_panel": {
    "scrollbar": {},
  },
  "centered_layout": {
    "left_padding": 0.2,
  },
  "bottom_dock_layout": "full",
  "tabs": {
    "git_status": false,
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": true,
    "show_user_menu": true,
    "show_user_picture": false,
  },
  "project_panel": {
    "default_width": 480.0,
    "dock": "right",
  },
  "tab_bar": {
    "show_tab_bar_buttons": true,
    "show_nav_history_buttons": true,
    "show": false,
  },
  "indent_guides": {
    "enabled": false,
  },
  "agent_ui_font_size": 26.0,
  "agent_buffer_font_size": 26.0,
  "gutter": {
    "line_numbers": true,
  },
  "relative_line_numbers": "enabled",
  "edit_predictions": {
    "mode": "subtle",
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "favorite_models": [],
    "model_parameters": [],
  },
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "preferred_line_length": 80,
  "vim_mode": true,
  "buffer_line_height": "comfortable",
  "buffer_font_family": ".ZedMono",
  "terminal": {
    "font_family": "ZedMono Nerd Font Mono",
  },
  "ui_font_size": 26.0,
  "buffer_font_size": 26.0,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha - No Italics",
    "dark": "Catppuccin Mocha - No Italics",
  },
  "experimental.theme_overrides": {
    "editor.background": "#11111BCC",
    "editor.gutter.background": "#11111BCC",
    "editor.active_line.background": "#11111BCC",
    "panel.background": "#11111B80",
    "toolbar.background": "#11111BCC",
    "tab_bar.background": "#11111BCC",
    "title_bar.background": "#11111BFF",
    "status_bar.background": "#11111BCC",
    "tab.active_background": "#11111BCC",
    "tab.inactive_background": "#11111BCC",
    "terminal.background": "#11111B00",
    "scrollbar.track.background": "#11111BCC",
    "scrollbar.thumb.background": "#11111B00",
    "border": "#585b70",
    "border.variant": "#585b70",
    "border.focused": "#585b70",
    "border.disabled": "#585b70",
    "elevated_surface.background": "#11111BCC",
    "surface.background": "#11111BCC",
    "background": "#11111BCC",
  },
}
